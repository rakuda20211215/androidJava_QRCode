<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/activity_main_mylist_items"
    android:background="?attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/myList_title"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textColor="@color/deepGray"
        android:text="title"
        app:layout_constraintTop_toTopOf="@id/myList_item"
        app:layout_constraintBottom_toBottomOf="@id/myList_item"
        app:layout_constraintLeft_toRightOf="@id/myList_minus"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        android:textSize="10sp"/>
    <TextView
        android:id="@+id/myList_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/myList_title"
        android:layout_marginLeft="30dp"
        android:textSize="13sp"/>
    <ImageView
        android:id="@+id/myList_minus"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/myList_item"
        app:layout_constraintBottom_toBottomOf="@id/myList_item"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        android:layout_margin="5dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/caa_line"/>

</androidx.constraintlayout.widget.ConstraintLayout>