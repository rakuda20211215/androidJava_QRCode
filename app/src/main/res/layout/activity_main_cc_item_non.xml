<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/cc_item_non_img"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ma_cc_item_non"/>
    <TextView
        android:id="@+id/cc_item_non_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/deepGray"
        app:layout_constraintTop_toTopOf="@id/cc_item_non_img"
        app:layout_constraintLeft_toLeftOf="@id/cc_item_non_img"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/cc_item_non_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/cc_item_non_title"
        app:layout_constraintBottom_toBottomOf="@id/cc_item_non_img"
        app:layout_constraintLeft_toLeftOf="@id/cc_item_non_img"
        app:layout_constraintRight_toRightOf="@id/cc_item_non_img"
        app:layout_constraintHorizontal_bias="0.6"/>
</androidx.constraintlayout.widget.ConstraintLayout>