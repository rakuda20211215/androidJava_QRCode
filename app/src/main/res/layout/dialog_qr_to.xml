<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:background="#2200ff88">
    <ImageView
        android:id="@+id/dialog_qr_to_img"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#2200ff88"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmed the scan"
        android:textColor="#00dd99"
        android:textStyle="italic"
        app:layout_constraintTop_toTopOf="@id/dialog_qr_to_img"
        app:layout_constraintBottom_toBottomOf="@id/dialog_qr_to_img"
        app:layout_constraintLeft_toLeftOf="@id/dialog_qr_to_img"
        app:layout_constraintRight_toRightOf="@id/dialog_qr_to_img"
        app:layout_constraintHorizontal_bias="0.5"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/dialog_qr_to_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="スキャンされました"
        android:textSize="11sp"
        app:layout_constraintTop_toBottomOf="@id/dialog_qr_to_img"
        app:layout_constraintLeft_toLeftOf="@id/dialog_qr_to_img"
        app:layout_constraintRight_toRightOf="@id/dialog_qr_to_img"
        android:layout_margin="15dp"/>
    <TextView
        android:id="@+id/dialog_qr_to_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:text="確認する"
        android:textSize="11sp"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/dialog_qr_to_text"
        app:layout_constraintRight_toRightOf="@id/dialog_qr_to_img"
        android:layout_marginTop="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="14dp"
        android:background="@drawable/dialog_qr_to_button_bak"/>

</androidx.constraintlayout.widget.ConstraintLayout>