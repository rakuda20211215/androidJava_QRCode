<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/cc_item_match_img"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ma_cc_item_match"/>
    <TextView
        android:id="@+id/cc_item_match_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/deepGray"
        app:layout_constraintTop_toTopOf="@id/cc_item_match_img"
        app:layout_constraintBottom_toBottomOf="@id/cc_item_match_img"
        app:layout_constraintLeft_toLeftOf="@id/cc_item_match_img"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/cc_item_match_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/cc_item_match_img"
        app:layout_constraintBottom_toBottomOf="@id/cc_item_match_img"
        app:layout_constraintLeft_toLeftOf="@id/cc_item_match_img"
        app:layout_constraintRight_toRightOf="@id/cc_item_match_img"
        app:layout_constraintHorizontal_bias="0.6"/>
</androidx.constraintlayout.widget.ConstraintLayout>